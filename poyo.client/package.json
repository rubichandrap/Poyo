{
	"name": "poyo.client",
	"private": false,
	"version": "0.0.3",
	"type": "module",
	"scripts": {
		"dev": "vite",
		"build": "cross-env BUILDING_VITE=1 tsc -b && vite build",
		"preview": "vite preview",
		"type-check": "tsc -p tsconfig.app.json --noEmit",
		"lint": "biome lint",
		"lint:fix": "biome lint --write",
		"format": "biome format",
		"format:fix": "biome format --write",
		"generate": "npm run generate:dtos && npm run generate:schemas",
		"generate:dtos": "node scripts/generate-dtos.js",
		"generate:schemas": "node scripts/generate-schema-validations.js"
	},
	"devDependencies": {
		"@hookform/resolvers": "5.2.2",
		"@tailwindcss/postcss": "4.1.18",
		"@tailwindcss/vite": "4.1.18",
		"@tanstack/react-query": "5.90.16",
		"@tanstack/react-query-devtools": "5.91.2",
		"@types/node": "24.6.0",
		"@types/react": "19.1.16",
		"@types/react-dom": "19.1.9",
		"@vitejs/plugin-react": "5.1.2",
		"@zodios/core": "10.9.6",
		"axios": "1.13.2",
		"cross-env": "10.1.0",
		"dotenv": "17.2.3",
		"glob": "11.0.0",
		"postcss": "8.4.0",
		"react": "19.1.1",
		"react-dom": "19.1.1",
		"react-hook-form": "7.70.0",
		"tailwindcss": "4.1.18",
		"typescript": "5.9.3",
		"vite": "npm:rolldown-vite@7.1.14",
		"zod": "3.25.76"
	},
	"overrides": {
		"vite": "npm:rolldown-vite@7.1.14"
	}
}
